{
	"info": {
		"name": "URL Shortener API Gateway",
		"description": "Complete Postman collection for URL Shortener API Gateway",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"version": "1.0.0"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{accessToken}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "accessToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "refreshToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		},
		{
			"key": "userUuid",
			"value": "",
			"type": "string"
		},
		{
			"key": "guestUuid",
			"value": "",
			"type": "string"
		},
		{
			"key": "shortLink",
			"value": "",
			"type": "string"
		},
		{
			"key": "sessionJti",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						},
						"description": "Проверка состояния сервиса"
					},
					"response": []
				}
			]
		},
		{
			"name": "Redirect",
			"item": [
				{
					"name": "Redirect by Short Link",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/l/{{shortLink}}",
							"host": ["{{baseUrl}}"],
							"path": ["l", "{{shortLink}}"]
						},
						"description": "Редирект по короткой ссылке (пример: /l/abc123)"
					},
					"response": []
				}
			]
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register Guest",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.uuid) {",
									"        pm.collectionVariables.set('guestUuid', jsonData.uuid);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": ""
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register-guest",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register-guest"]
						},
						"description": "Регистрация гостевого пользователя"
					},
					"response": []
				},
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.user && jsonData.user.id) {",
									"        pm.collectionVariables.set('userId', jsonData.user.id);",
									"    }",
									"    if (jsonData.user && jsonData.user.uuid) {",
									"        pm.collectionVariables.set('userUuid', jsonData.user.uuid);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"username\": \"testuser\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register-user?guestUUID={{guestUuid}}",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register-user"],
							"query": [
								{
									"key": "guestUUID",
									"value": "{{guestUuid}}",
									"description": "Optional: UUID гостя для привязки данных"
								}
							]
						},
						"description": "Регистрация обычного пользователя"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.accessToken) {",
									"        pm.collectionVariables.set('accessToken', jsonData.accessToken);",
									"    }",
									"    if (jsonData.user && jsonData.user.id) {",
									"        pm.collectionVariables.set('userId', jsonData.user.id);",
									"    }",
									"    if (jsonData.user && jsonData.user.uuid) {",
									"        pm.collectionVariables.set('userUuid', jsonData.user.uuid);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "x-guest-uuid",
								"value": "{{guestUuid}}",
								"description": "Optional: UUID гостя для переноса данных",
								"disabled": true
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePassword123!\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						},
						"description": "Вход в систему. RefreshToken сохраняется в httpOnly cookie"
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.accessToken) {",
									"        pm.collectionVariables.set('accessToken', jsonData.accessToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/refresh",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "refresh"]
						},
						"description": "Обновление токенов. RefreshToken берётся из cookie"
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/logout",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "logout"]
						},
						"description": "Выход из системы (текущая сессия)"
					},
					"response": []
				},
				{
					"name": "Logout All",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/logout-all",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "logout-all"]
						},
						"description": "Выход со всех устройств"
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/me",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "me"]
						},
						"description": "Получение данных текущего пользователя (требуется Bearer token)"
					},
					"response": []
				},
				{
					"name": "Get Active Sessions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/user/{{userId}}/sessions",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "user", "{{userId}}", "sessions"]
						},
						"description": "Получение активных сессий пользователя"
					},
					"response": []
				},
				{
					"name": "Revoke Session",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/auth/user/{{userId}}/sessions/{{sessionJti}}",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "user", "{{userId}}", "sessions", "{{sessionJti}}"]
						},
						"description": "Отзыв конкретной сессии пользователя"
					},
					"response": []
				}
			]
		},
		{
			"name": "Links",
			"item": [
				{
					"name": "Get User Links",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/links/user/{{userId}}?page=1&limit=20",
							"host": ["{{baseUrl}}"],
							"path": ["links", "user", "{{userId}}"],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Номер страницы"
								},
								{
									"key": "limit",
									"value": "20",
									"description": "Количество ссылок на странице"
								}
							]
						},
						"description": "Получение ссылок пользователя с пагинацией"
					},
					"response": []
				},
				{
					"name": "Create Link",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.shortLink) {",
									"        pm.collectionVariables.set('shortLink', jsonData.shortLink);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"originalUrl\": \"https://example.com/very/long/url/that/needs/shortening\",\n  \"customShortLink\": \"mylink\",\n  \"expiresAt\": \"2025-12-31T23:59:59.000Z\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/links/user/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["links", "user", "{{userId}}"]
						},
						"description": "Создание новой короткой ссылки. customShortLink и expiresAt опциональны"
					},
					"response": []
				},
				{
					"name": "Get Link Stats",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/links/{{shortLink}}/stats",
							"host": ["{{baseUrl}}"],
							"path": ["links", "{{shortLink}}", "stats"]
						},
						"description": "Получение статистики конкретной ссылки"
					},
					"response": []
				},
				{
					"name": "Get QR Code",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/links/{{shortLink}}/qr",
							"host": ["{{baseUrl}}"],
							"path": ["links", "{{shortLink}}", "qr"]
						},
						"description": "Получение QR-кода для короткой ссылки (возвращает PNG изображение)"
					},
					"response": []
				},
				{
					"name": "Delete Link",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/links/{{shortLink}}",
							"host": ["{{baseUrl}}"],
							"path": ["links", "{{shortLink}}"]
						},
						"description": "Удаление короткой ссылки"
					},
					"response": []
				},
				{
					"name": "Get User Links Stats",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/links/user/{{userId}}/stats",
							"host": ["{{baseUrl}}"],
							"path": ["links", "user", "{{userId}}", "stats"]
						},
						"description": "Получение статистики всех ссылок пользователя"
					},
					"response": []
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get All Users (Admin Only)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["users"]
						},
						"description": "Получение всех пользователей (только для администраторов)"
					},
					"response": []
				},
				{
					"name": "Get User by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/id/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["users", "id", "{{userId}}"]
						},
						"description": "Получение пользователя по ID"
					},
					"response": []
				},
				{
					"name": "Get User by UUID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/uuid/{{userUuid}}",
							"host": ["{{baseUrl}}"],
							"path": ["users", "uuid", "{{userUuid}}"]
						},
						"description": "Получение пользователя по UUID"
					},
					"response": []
				},
				{
					"name": "Update User by ID",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"newusername\",\n  \"email\": \"newemail@example.com\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/id/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["users", "id", "{{userId}}"]
						},
						"description": "Обновление пользователя по ID"
					},
					"response": []
				},
				{
					"name": "Update User by UUID",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"newusername\",\n  \"email\": \"newemail@example.com\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/uuid/{{userUuid}}",
							"host": ["{{baseUrl}}"],
							"path": ["users", "uuid", "{{userUuid}}"]
						},
						"description": "Обновление пользователя по UUID"
					},
					"response": []
				},
				{
					"name": "Delete User by ID",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/id/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["users", "id", "{{userId}}"]
						},
						"description": "Удаление пользователя по ID"
					},
					"response": []
				},
				{
					"name": "Delete User by UUID",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/uuid/{{userUuid}}",
							"host": ["{{baseUrl}}"],
							"path": ["users", "uuid", "{{userUuid}}"]
						},
						"description": "Удаление пользователя по UUID"
					},
					"response": []
				}
			]
		}
	]
}
